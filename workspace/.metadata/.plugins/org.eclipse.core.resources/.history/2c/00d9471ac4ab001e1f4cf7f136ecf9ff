package tw.taguo.dao;

import java.util.List;

import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import tw.taguo.model.Shoe;

@Repository
public class ShoeDaoImpl implements ShoeDao{
	
	private  JdbcTemplate jdbcTemplate;
	
	public ShoeDaoImpl(JdbcTemplate jdbcTemplate) {
		this.jdbcTemplate = jdbcTemplate;
	}

	@Override
	public Shoe getById(Long id) {
		String sql = "SELECT * FROM Shoes WHERE shoe_id = ?";
		return jdbcTemplate.queryForObject(sql, new Object[]{id},new BeanPropertyRowMapper<>(Shoe.class));
	}

	@Override
	public List<Shoe> getAllShoes() {
		String sql = "SELECT * FROM Shoes";
		return jdbcTemplate.query(sql, new BeanPropertyRowMapper<>(Shoe.class));
	}

	@Override
	public void save(Shoe shoe) {
		String sql = "INSERT INTO Shoes (brand,model,color,price,inventory) VALUES(?,?,?,?,?)";
		jdbcTemplate.update(sql,shoe.getBrand(),shoe.getModel(),shoe.getColor(),shoe.getPrice(),shoe.getInventory());
	}

	@Override
	public void update(Shoe shoe) {
		String sql = "UPDATE Shoes SET brand = ?,model = ?,color = ?,price = ? inventory = ? WHERE shoe_id = ?";
		jdbcTemplate.update(sql,shoe.getBrand(),shoe.getModel(),shoe.getColor(),shoe.getPrice(),shoe.getInventory());

	}

	@Override
	public void delete(Shoe shoe) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public List<Shoe> SearchByName(String name) {
		// TODO Auto-generated method stub
		return null;
	}

}
